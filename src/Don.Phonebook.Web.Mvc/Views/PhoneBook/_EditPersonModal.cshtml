@using Don.Phonebook.Persons
@using Don.Phonebook.Web.Models.Common.Modals


@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewPerson")))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">
        
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="validate form-control" type="text" id="Name" name="Name" required maxlength ="@Person.MaxNameLength"  >
                        <label for="Name" class="form-label">@L("Name")</label>
                    </div>
                </div>

                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="validate form-control" type="text" id="Surname" name="Surname" required maxlength ="@Person.MaxSurnameLength"  >
                        <label for="Surname" class="form-label">@L("Surname")</label>
                    </div>
                </div>
                
                <div class="form-group form-float">
                    <div class="form-line">
                        <input class="validate form-control" type="email" id="EmailAddress" name="EmailAddress" required maxlength ="@Person.MaxEmailAddressLength"  >
                        <label for="personSurname" class="form-label">@L("EmailAddress")</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Roles/_EditRoleModal.js" asp-append-version="true"></script>